{
    "name": "{{ .name }}",
    "rules": [
        {
            "type": "PROCESS_GROUP",
            "enabled": true,
            "propagationTypes": [
                "PROCESS_GROUP_TO_SERVICE"
            ],
            "conditions": [
                {
                    "key": {
                        "attribute": "PROCESS_GROUP_TAGS"
                    },
                    "comparisonInfo": {
                        "type": "TAG",
                        "operator": "EQUALS",
                        "value": {
                            "context": "CONTEXTLESS",
                            "key": "environment",
                            "value": "{{ .environment }}"
                        },
                        "negate": false
                    }
                }
            ]
        }
    ]
}